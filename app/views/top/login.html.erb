<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>

<%= form_tag '/top/login' , method: :post do %>
    <%= label_tag :name, '名前' %>
    <%= text_field_tag :name %>
    <%= label_tag :password, 'パスワード' %>
    <%= password_field_tag :password %>
    <%= submit_tag 'ログイン' %>
<% end %>
<dir>
    <%= link_to '新規登録の方はこちら', new_user_path %>
</dir>

